{
  "name": "booking-scraper",
  "version": "2.0.0",
  "description": "A web scraper that extracts structured data from Booking.com hotel profile pages",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "npx jest --runInBand",
    "test:watch": "npx jest --watch --runInBand",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "check": "npm run format:check && npm run lint"
  },
  "keywords": [
    "booking",
    "booking.com",
    "scraper",
    "puppeteer",
    "express",
    "hotel",
    "web-scraping"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^24.9.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "oxfmt": "^0.1.0",
    "oxlint": "^0.16.0"
  }
}
